<h1><%= @the_photo.caption %></h1>

<img
  src="<%= @the_photo.image%>"
  alt="<%= @the_photo.caption %>"
>

<p>
  Posted by <%= @owner_user.username %>
</p>

<% if user_signed_in? && current_user.id == @the_photo.owner_id %>
  <a href="/delete_photo/<%= @the_photo.id %>">
    Delete this photo
  </a>
<% end %>
